<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
	<File name="FileLogger" fileName="DiscountCalculator.log" immediateFlush="false" append="false">
		<PatternLayout pattern="%d{yyyy-MM-dd hh:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
	</File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="FileLogger" />
    </Root>
  </Loggers>
</Configuration>